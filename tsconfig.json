{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": false,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "dist",
    "types": ["pg"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
